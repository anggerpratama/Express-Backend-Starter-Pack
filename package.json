{
  "name": "express-backend",
  "version": "1.0.0",
  "description": "PT Ronin Backend Standard and Starterpack",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc",
    "start": "tsc && node dist",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "node generate-migration.js",
    "migration:create": "npm run typeorm migration:create src/database/migrations/ManualMigration",
    "migrate": "npm run typeorm migration:run -- -d src/database/data-source.ts",
    "migrate:revert": "npm run typeorm migration:revert -- -d src/database/data-source.ts",
    "db:seed": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d src/database/data-source.ts"
  },
  "author": "PT RONIN",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "pg": "^8.17.2",
    "redis": "^5.10.0",
    "typeorm": "^0.3.28",
    "typeorm-extension": "^3.7.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.10",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "tsyringe": "^4.10.0",
    "typescript": "^5.9.3"
  }
}
